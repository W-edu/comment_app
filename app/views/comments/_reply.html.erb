<div class="card ml-5">
  <div class="card-body">
    <p>penis_haver_69 | <%= reply.created_at %></p>
    <p><%= reply.body %></p>
    <%= link_to 'reply', new_post_comment_path(@post, parent_id: reply.id), remote: true, class: 'd-block' %>

    <% if reply.replies.any? %>
      <% reply.replies.each do |reply| %>
        <%= render partial: 'comments/reply', locals: { reply: reply} %>
      <% end %>
    <% end %>
    <div id="reply-form-<%= reply.id %>"></div>
  </div>
</div>